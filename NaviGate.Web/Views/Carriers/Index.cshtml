@* Model tanımının doğru namespace'i gösterdiğinden emin olun *@
@model NaviGate.Web.ViewModels.CarrierIndexViewModel

@{
    ViewData["Title"] = "Taşıyıcı Yönetimi";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<h1>Taşıyıcı Yönetimi</h1>

@if (User.IsInRole("Admin"))
{
    <p><a asp-action="Create" class="btn btn-success">Yeni Taşıyıcı Ekle</a></p>
}

<div class="card card-body mb-4">
    <form asp-action="Index" method="get">
        <div class="row g-3 align-items-end">
            <div class="col-md-5">
                <label asp-for="SearchString" class="form-label"></label>
                <input asp-for="SearchString" class="form-control" />
            </div>
            <div class="col-md-4">
                <label asp-for="IsActiveFilter" class="form-label"></label>
                <select asp-for="IsActiveFilter" class="form-select">
                    <option value="">Tümü</option>
                    <option value="true">Aktif</option>
                    <option value="false">Pasif</option>
                </select>
            </div>
            <div class="col-md-2 d-grid gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-filter-circle me-1"></i> Filtrele
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i> Temizle
                </a>
            </div>
        </div>
    </form>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Taşıyıcı Adı</th>
            <th>SCAC Kodu</th>
            <th>Web Sitesi</th>
            <th>Durum</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Carriers)
        {
            <tr>
                <td>@item.CarrierName</td>
                <td>@item.ScacCode</td>
                <td><a href="@item.Website" target="_blank" rel="noopener noreferrer">@item.Website</a></td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Pasif</span>
                    }
                </td>         
                <td class="text-end btn-group">
                    <a asp-action="Details" asp-route-id="@item.CarrierId" class="btn btn-outline-primary" title="Detaylar">
                        <i class="fas fa-info-circle"></i>
                    </a>
                    @* Düzenle ve Sil linklerini SADECE Admin görebilir *@
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.CarrierId" class="btn btn-outline-secondary" title="Düzenle">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.CarrierId" class="btn btn-outline-danger" title="Sil">
                            <i class="fas fa-trash"></i>
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>