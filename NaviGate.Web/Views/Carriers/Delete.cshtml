@model NaviGate.Web.Models.Carrier

@{
    ViewData["Title"] = "Taşıyıcı Sil";
}

<h1>@ViewData["Title"]</h1>

<h3 class="text-danger">Bu kaydı kalıcı olarak silmek istediğinizden emin misiniz?</h3>
<p class="text-danger">Bu işlem geri alınamaz.</p>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CarrierName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CarrierName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ScacCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ScacCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Website)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Website)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TrackingUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrackingUrl)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContactPerson)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContactPerson)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>
    
    <div class="mt-4">
        <form asp-action="Delete" asp-route-id="@Model.CarrierId" method="post" style="display: inline;">
            <input type="submit" value="Evet, Sil" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
        </form>
    </div>
</div>
