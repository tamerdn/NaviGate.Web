<div class="mt-4">
    @* Düzenle linkini SADECE Admin görebilir *@
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.CarrierId" class="btn btn-primary">Düzenle</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
</div>
