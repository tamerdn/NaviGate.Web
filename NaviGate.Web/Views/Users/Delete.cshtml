@model NaviGate.Web.Models.User

@{
    ViewData["Title"] = "Kullanıcı Sil";
}

<h1>@ViewData["Title"]</h1>

<h3 class="text-danger">Bu kullanıcıyı kalıcı olarak silmek istediğinizden emin misiniz?</h3>
<p class="text-danger">Bu işlem geri alınamaz.</p>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Adı
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-3">
            Soyadı
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-3">
            E-posta
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form asp-action="Delete">
        @* Silinecek olan kullanıcının ID'sini formun içinde gizli olarak tutuyoruz *@
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Evet, Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
    </form>
</div>

