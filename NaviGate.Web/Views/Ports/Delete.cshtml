@model NaviGate.Web.Models.Port

@{
    ViewData["Title"] = "Liman Sil";
}

<h1>@ViewData["Title"]</h1>
<h3 class="text-danger">Bu kaydı kalıcı olarak silmek istediğinizden emin misiniz?</h3>
<p class="text-danger">Bu işlem geri alınamaz.</p>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PortName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PortName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PortCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PortCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
    </dl>
    
    <div class="mt-4">
        <form asp-action="Delete" asp-route-id="@Model.PortId" method="post" style="display: inline;">
            <input type="submit" value="Evet, Sil" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
        </form>
    </div>
</div>

