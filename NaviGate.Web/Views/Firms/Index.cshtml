@model NaviGate.Web.ViewModels.FirmIndexViewModel

@{
    ViewData["Title"] = "Firma Yönetimi";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h1>Firma Yönetimi</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Yeni Firma Oluştur</a>
</p>

@* ==================== ARAMA VE FİLTRELEME FORMU ==================== *@
<div class="card card-body mb-4">
    <form asp-action="Index" method="get">
        @* Kolonları yeniden düzenliyoruz *@
        <div class="row g-3 align-items-end">
            <div class="col-md-4">
                <label asp-for="SearchString" class="form-label"></label>
                <input asp-for="SearchString" class="form-control" />
            </div>
            <div class="col-md-3">
                <label asp-for="FirmTypeFilter" class="form-label"></label>
                @* YENİ DROPDOWN *@
                <select asp-for="FirmTypeFilter" class="form-select" asp-items="Model.FirmTypes">
                    <option value="">Tümü</option>
                </select>
            </div>
            <div class="col-md-3">
                <label asp-for="IsActiveFilter" class="form-label"></label>
                <select asp-for="IsActiveFilter" class="form-select">
                    <option value="">Tümü</option>
                    <option value="true">Aktif</option>
                    <option value="false">Pasif</option>
                </select>
            </div>
            <div class="col-md-2 d-grid gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-filter-circle me-1"></i> Filtrele
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i> Temizle
                </a>
            </div>
        </div>
    </form>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Firms.First().FirmName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firms.First().FirmType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firms.First().ContactPerson)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firms.First().PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firms.First().IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Firms)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirmName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirmType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactPerson)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Pasif</span>
                    }
                </td>
                <td class="text-end btn-group">
                    <a asp-action="Details" asp-route-id="@item.FirmId" class="btn btn-outline-primary" title="Detaylar">
                        <i class="fas fa-info-circle"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.FirmId" class="btn btn-outline-secondary" title="Düzenle">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.FirmId" class="btn btn-outline-danger" title="Sil">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
