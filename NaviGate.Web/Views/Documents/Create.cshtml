@model NaviGate.Web.ViewModels.DocumentCreateViewModel

@{
    ViewData["Title"] = "Yeni Döküman Yükle";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]

        @if (TempData["LastShipmentId"] != null)
        {
            <a asp-controller="Shipments" asp-action="Details" asp-route-id="@TempData["LastShipmentId"]" class="btn btn-sm btn-outline-success ms-3">
                Sevkiyat Detayına Git
            </a>
        }

        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="ShipmentId" class="control-label"></label>
                <select asp-for="ShipmentId" class="form-control" asp-items="Model.ShipmentOptions">
                    <option value="">-- Sevkiyat Seçiniz --</option>
                </select>
                <span asp-validation-for="ShipmentId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DocumentType" class="control-label"></label>
                <select asp-for="DocumentType" class="form-control" asp-items="Html.GetEnumSelectList<DocumentType>()"></select>
                <span asp-validation-for="DocumentType" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DocumentFile" class="control-label"></label>
                <input asp-for="DocumentFile" class="form-control" type="file" />
                <span asp-validation-for="DocumentFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Yükle ve Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}