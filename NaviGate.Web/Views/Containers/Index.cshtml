@model NaviGate.Web.ViewModels.ContainerIndexViewModel

@{
    ViewData["Title"] = "Konteyner Yönetimi";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h1>Konteyner Yönetimi</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Yeni Konteyner Oluştur</a>
</p>

@* ==================== ARAMA VE FİLTRELEME FORMU ==================== *@
<div class="card card-body mb-4">
    <form asp-action="Index" method="get">
        <div class="row g-3 align-items-end">
            <div class="col-md-5">
                <label asp-for="SearchString" class="form-label"></label>
                <input asp-for="SearchString" class="form-control" />
            </div>
            <div class="col-md-5">
                <label asp-for="ShipmentIdFilter" class="form-label"></label>
                <select asp-for="ShipmentIdFilter" class="form-select" asp-items="Model.Shipments">
                    <option value="">Tüm Sevkiyatlar</option>
                </select>
            </div>
            <div class="col-md-2 d-grid gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-filter-circle me-1"></i> Filtrele
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i> Temizle
                </a>
            </div>
        </div>
    </form>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Konteyner Numarası
            </th>
            <th>
                Konteyner Tipi
            </th>
            <th>
                Mühür Numarası
            </th>
            <th>
                Brüt Ağırlık (kg)
            </th>
            <th>
                Paket Adedi
            </th>
            <th>
                Sevkiyat Referans Numarası
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Containers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ContainerNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContainerType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SealNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrossWeightKg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PackageQuantity)
            </td>
            <td>
                <a asp-action="Details" asp-controller="Shipments" class="btn btn-outline-secondary" asp-route-id="@item.ShipmentId">@item.Shipment.ReferenceNumber</a>
            </td>
            <td class="text-end btn-group">
                    <a asp-action="Details" asp-route-id="@item.ContainerId" class="btn btn-outline-primary" title="Detaylar">
                    <i class="fas fa-info-circle"></i>
                </a>
                <a asp-action="Edit" asp-route-id="@item.ContainerId" class="btn btn-outline-secondary" title="Düzenle">
                    <i class="fas fa-pencil-alt"></i>
                </a>
                <a asp-action="Delete" asp-route-id="@item.ContainerId" class="btn btn-outline-danger" title="Sil">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
